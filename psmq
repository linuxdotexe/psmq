#!/usr/bin/env bash

function show_help ()
{
    printf "Usage: psmq [options [parameters]]\n"
    printf "\n"
    printf "Options:\n"
    printf "    -h, Print this menu\n"
    printf "    -l LANG, Choose language, default English\n"
    printf "\n"

    return 0
}

function run ()
{
    read -r quote < <(shuf $1)
    author=${quote##* - }
    text=${quote% - *}
    printf "ðŸ¿ "
    printf '\e[3m\e[93m%s \e[94m- %s\e[m\n' "$text" "$author"
    return 0
}

if [ ! -z "$1" ]; then
    while [ ! -z "$1" ]; do
        case "$1" in
            -h)
                show_help
                ;;
            -l)
                shift
                LANG="$1" # Take language
                case "$LANG" in
                    es)
                        #$PATH = 
                        run ~/.local/bin/psmq/quotes_es.txt                        
                        ;;
                    *)
                    echo "Incorrect input provided"
                    show_help
                esac
                ;;
            *)
                echo "Incorrect input provided"
                show_help
        esac

    shift
done
else
    run ~/.local/bin/psmq/quotes.txt
fi
